@model IEnumerable<CarolineReinatoMVC.Models.Cargo>

@{
    ViewBag.Title = "Cargos";
}

<h2>Cargos</h2>

<p>
    @Html.ActionLink("Criar novo cargo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome do Cargo
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCargo)
        </td>
            @if(item.StatusAtivo == true)
            {
                <td>Ativo</td>
            }
            else
            {
                <td>Inativo</td>
            }
    <td>
        @if (item.StatusAtivo == true)
        {
            @Html.ActionLink("Desativar", "Desativar", new { id = item.Id })
        }
        else
        {
            @Html.ActionLink("Ativar", "Ativar", new { id = item.Id })
        }
    </td>
    </tr>
}

</table>
